<div class="diary-form-control">

    {{ form_start(form, {'attr': {'class': 'diary-form'}}) }}

        {{ form_widget(form.comment, {'attr': {
            'placeholder': 'De quoi souhaitez-vous parler?...',
            'class': 'diary-form-text'
        }}) }}
        <small>{{ form_help(form.comment) }}</small>
        <div class="form-error">
            {{ form_errors(form.comment) }}
        </div>

        <div class="diary-bottom">
            <div class="diary-media">
                {{ form_label(form.url) }}
                {{ form_widget(form.url) }}
                <small>{{ form_help(form.url) }}</small>
                <div class="form-error">
                    {{ form_errors(form.url) }}
                </div>
            </div>
            <button id="diary-send-btn" type="submit">
                <img src="{{ asset('build/images/send-button.svg') }}" alt=""/>
            </button>
        </div>
    {{ form_end(form) }}
</div>