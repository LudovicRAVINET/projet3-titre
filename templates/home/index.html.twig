{% extends 'base.html.twig' %}

{% block title %}Eventoo - Accueil
{% endblock %}


{% block body %}

<header class="home-theme">
      <input type="hidden" id="newUser" value="{{ newUser ?? false }}">
</header>

{% for category, messages in app.flashes %}
	{% for message in messages %}
		<div class="alert alert-{{ category }}">
			{{ message }}
		</div>
	{% endfor %}
{% endfor %}

<!--Carousel-->
<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="10000">
      <img src="{{ asset('build/images/carousel/step1.2cfb888d.png') }}" class="d-block w-100" alt="Step 1 ">
    </div>
    <div class="carousel-item" data-bs-interval="2000">
      <img src="{{ asset('build/images/carousel/step2.756b0c85.png') }}" class="d-block w-100" alt="Step 2">
    </div>
    <div class="carousel-item">
      <img src="{{ asset('build/images/carousel/step3.3b8a8354.png') }}" class="d-block w-100" alt="Step 3">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>


<!--Events-->
<div class="display-events text-center">
    <div class="box-events wedding">
        <img src="{{ asset('build/images/background-images/bg-wedding.2ad0d1a8.jpg') }}" alt="Wedding background image">
        <a href="{{ path('wedding_index') }}">
            <h2>Mariage</h2>
        </a>
    </div>
    <div class="box-events mourning">
        <img src="{{ asset('build/images/background-images/bg-mourning.277cb7d4.png') }}" alt="Mourning background image">
        <a href="{{ path('mourning_index') }}">
            <h2>Deuil</h2>
        </a>
    </div>
    <div class="box-events birthday">
        <img src="{{ asset('build/images/background-images/bg-birthday.cc144639.jpeg') }}" alt="Birthday background image">
        <a href="{{ path('birthday_index') }}">
            <h2>Anniversaire</h2>
        </a>
    </div>
    <div class="box-events others">
        <img src="{{ asset('build/images/background-images/others.733d6be7.jpg') }}" alt="Other background image">
        <a href="#">
            <h2>Autres</h2>
        </a>
    </div>
</div>

{% endblock %}
